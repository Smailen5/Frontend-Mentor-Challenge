{
  "path": ".",
  "infile": "CHANGELOG.md",
  "header": "# Changelog\n\nTutti i cambiamenti notevoli a questo progetto saranno documentati in questo file.\n",
  "types": [
    {"type": "feat", "section": "✨ Features", "hidden": false},
    {"type": "fix", "section": "🐛 Bug Fixes", "hidden": false},
    {"type": "style", "section": "💄 Styling", "hidden": false},
    {"type": "refactor", "section": "♻️ Code Refactoring", "hidden": false},
    {"type": "perf", "section": "🚀 Performance Improvements", "hidden": false},
    {"type": "docs", "section": "📝 Documentation", "hidden": false},
    {"type": "test", "section": "🧪 Tests", "hidden": false},
    {"type": "build", "section": "🏗️ Build System", "hidden": false},
    {"type": "ci", "section": "👷 CI", "hidden": true},
    {"type": "chore", "section": "🔧 Chore", "hidden": true}
  ],
  "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
  "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
  "skip": {
    "bump": false,
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "releaseCommitMessageFormat": "chore(release): {{currentTag}}\n\nAggiornamento versione e changelog"
}
